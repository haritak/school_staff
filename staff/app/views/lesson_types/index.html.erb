<p id="notice"><%= notice %></p>

<h1>Lesson Types</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lesson_types.each do |lesson_type| %>
      <tr>
        <td><%= lesson_type.code %></td>
        <td><%= lesson_type.description %></td>
        <td><%= link_to 'Show', lesson_type %></td>
        <td><%= link_to 'Edit', edit_lesson_type_path(lesson_type) %></td>
        <td><%= link_to 'Destroy', lesson_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

