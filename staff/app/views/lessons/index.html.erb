<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Description</th>
      <th>Hours</th>
      <th>Lesson Type</th>
      <th>School Grade Specialty</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.abbr %></td>
        <td><%= lesson.description %></td>
        <td><%= lesson.hours %></td>
        <td><%= lesson.lesson_type.code %></td>
        <td><%= lesson.school_grade_specialty.description %></td>
        <td><%= lesson.reference %></td>
        <td><%= link_to 'Show', lesson %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
