<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Προσωπικό</th>
      <th>Σχολείο</th>
      <th>Σχέση εργασίας</th>
      <th>Ημ. Ανάλ. Υπ. στο Σχολείο</th>
      <th>Ημ. Διορισμού</th>
      <th>Teaching hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.person.last_name %></td>
        <td><%= teacher.school.title %></td>
        <td><%= teacher.teacher_working_class.description %></td>
        <td><%= teacher.date_in_school %></td>
        <td><%= teacher.date_employed %></td>
        <td><%= teacher.teaching_hours %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

